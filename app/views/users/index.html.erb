<div class="container" > 
  <div align="center"> 
    <h2>Point Leaders</h2>
  </div>

  <hr/> 

  <div class="col-md-6 col-md-offset-3">
    <table class="table table-hover table-condensed">
      <thead>
        <th>User</th>
        <th>Points</th>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td> <%= link_to user.username, user_path(user) %> </td> 
            <td> <%= user.points%> </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
